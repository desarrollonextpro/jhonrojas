<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--    PAYMENT FORM SIDE BAR TABLE TOTAL-->

    <template id="website_sale_product_url_afiliado" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="t-if">not product.url_afiliado</attribute>
        </xpath>
        <xpath expr="//a[@id='add_to_cart']" position="after">
            <t t-call="custommodule.url_afiliado" />
        </xpath>
    </template>

    <template id="url_afiliado">
        <a id="url_afiliado" class="btn btn-primary btn-lg mt16 d-block d-sm-inline-block" t-attf-href="#{product.url_afiliado if product.url_afiliado else '#'}" data-html="true" t-if="product.url_afiliado"> Comprar ahora</a>
    </template>

<!--    ADD TO CART BUTTON -->
    
</odoo>
