<?xml version="1.0" encoding="utf-8"?>
<odoo> 

    <template id="custom_website_sale_confirmation_credito_directo" inherit_id="website_sale.confirmation">
        <xpath expr="//h1[1]" position="after">
          <h4 t-if="order.payment_web_site.name == 'Crédito directo' and order.state == 'sale'">
            <span>Su pedido ha sido confirmado</span>
          </h4>
          <h4 t-if="order.payment_web_site.name == 'Crédito directo' and order.state == 'sent'">
            <span>Su pedido está pendiente de confirmación, estamos verificando su línea de crédito disponible. Por favor contactese con Xiomara Macías al 0981257548.</span>
          </h4>
        </xpath>

    </template>

</odoo>

