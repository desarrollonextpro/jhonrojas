    <!-- MODIFICACION ESTANDAR DEL CARRITO -->
    <record id="website_sale.header" model="ir.ui.view">
        <field name="arch" type="xml">
            <data inherit_id="website.layout" name="Header Shop My Cart Link">
                <xpath expr="//header//ul[@id='top_menu']/li" position="before">
                    <t t-if="not website_sale_order">
                        <t t-set="website_sale_order" t-value="website.sale_get_order()"/>
                    </t>
                    <li class="nav-item divider d-none"/> <!-- Make sure the cart and related menus are not folded (see autohideMenu) -->
                    <li t-attf-class="nav-item o_wsale_my_cart #{'' if website_sale_order and website_sale_order.cart_quantity else 'd-none'}">
                        <a href="/shop/cart" class="nav-link">
                            <i class="fa fa-shopping-cart"/>
                            <span>Carrito</span>
                            <!-- My Cart <sup t-attf-class="my_cart_quantity badge badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" t-att-data-order-id="website_sale_order and website_sale_order.id or ''"/> -->
                            <sup t-attf-class="my_cart_quantity badge badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" t-att-data-order-id="website_sale_order and website_sale_order.id or ''"/>
                        </a>
                    </li>
                </xpath>
            </data>
        </field>
    </record>


    <!-- MODIFICACION DE BOTON AGREGAR AL CARRITO -->
    <record id="website_sale.products_add_to_cart" model="ir.ui.view">
        <field name="arch" type="xml">
            <data inherit_id="website_sale.products_item" active="False" customize_show="True" name="Add to Cart">
                <xpath expr="//div[hasclass('o_wsale_product_btn')]" position="inside">
                    <t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>
                    <input name="product_id" t-att-value="product_variant_id" type="hidden"/>
                    <t t-if="product_variant_id" >
                        <!--<a t-att-data-product-id="product.product_variant_id.id" role="button" class="btn btn-secondary add-qcky-submit" aria-label="Agregar al carrito" title="Agregar al carrito">-->
                        <!--<a href="#" role="button"  t-attf-class="btn btn-secondary a-submit {{ '' if product.sudo().virtual_available &gt; 0 else 'disabled'}}" aria-label="Shopping cart" title="Shopping cart">-->
                        <a href="#" role="button"  t-attf-class="btn btn-secondary a-submit" aria-label="Shopping cart" title="Shopping cart">
                            <span class="fa fa-shopping-cart"/>
                        </a>
                    </t>
                </xpath>
            </data>
        </field>
    </record>
    
</odoo>
