<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- Categorias especiales -->	
	    <record id="view_partner_form" model="ir.ui.view">
            <field name="name">custommodule.view.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='category_id']" position="after">
                    <field name="special_category" widget="many2many_tags"/>
                 </xpath>
                 <xpath expr="//field[@name='type']" position="after">
                    <field name="first_name"/>
                    <field name="last_name"/>
                 </xpath>
                 <field name="vat" position="after">
                    <label for="identification_type_id" string="Tipo de identificación"/>
                    <div>
                        <field name="identification_type_id" options="{'no_open': True, 'no_create': True}" placeholder="Type" attrs="{'readonly': [('parent_id','!=',False)]}" class="oe_inline" />
                        <span class="oe_read_only"> - </span>
                        <field name="vat" placeholder="Número" class="oe_inline" attrs="{'readonly': [('parent_id','!=',False)]}"/>
                    </div>
                </field>
            </field>
        </record>
    </data>
</openerp>
